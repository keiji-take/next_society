
<%= render "shared/header" %>
<div class="main">
  <h1 class="sign-up">Sign up</h1>

  <%= form_with model: @user, url:user_registration_path, method: :post, class:"registration-main", local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-wrap">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_area :name, autofocus: true, class:"input-default", id:"name", placeholder:"例) 山崎ネクスト就職"%>
      </div>
      
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"例) example@nextsociety.jp" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-comfirmation", placeholder:"同じパスワードを入力してください" %>
      </div>
      
      <div class="field">
        <%= f.label :tel_number %>
        <%= f.text_area :tel_number, class:"input-default", id:"tel_number", placeholder:"09012345678" %>
      </div>

      <div class="field">
        <%= f.label :gender %>
        <%= f.collection_select(:gender, Gender.all, :id, :name, {prompt: "---"}, {class:"input-default", id:"gender"}) %>
      </div>

      <div class="field">
        <%= f.label :profile %>
        <%= f.text_area :profile, class:"input-default", id:"profile", placeholder:"自己紹介文を書いてください" %>
      </div>

      <div class="field">
        <%= f.label :birth_date %>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birth_date,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1990,
                        end_year: (Time.now.year - 10),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>

      <div class="field">
        <%= f.label :occupation %>
        <%= f.collection_select(:occupation, Occupation.all, :id, :name, {prompt: "---"}, {class:"input-default", id:"occupation"}) %>
      </div>

      <div class="field">
        <%= f.label :location %>
        <%= f.collection_select(:location, Location.all, :id, :name, {prompt: "---"}, {class:"input-default", id:"location"}) %>
      </div>
      
      <div class="register-btn">
        <%= f.submit "Sign up", class:"submit-btn" %>

      </div>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>

