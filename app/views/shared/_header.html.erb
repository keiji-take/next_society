<header class="top-pade-header">
  <div class="nav-top">
    <div class="nav">
      <%= link_to 'Next Society', root_path, class:"app-logo" %>
      <ul class="head-list">
        <%# devise導入後に表示分岐 %>
        <% if user_signed_in? %>
          <li><%= link_to '投稿する', new_next_path, class:"new-tweet"%></li>
          <li><%= link_to current_user.name, user_path(current_user.id), method: :get, class:"login-btn"%></li>
        <% elsif company_signed_in? %>
        <li><%= link_to 'chat一覧', messages_path, class:"new-tweet"%></li>
          <li><%= link_to current_company.name, destroy_company_session_path, class:"login-btn"%></li>
        <% else %>
          <li><%= link_to '投稿する', new_user_registration_path, class:"new-tweet"%></li>
          <li><%= link_to 'サインイン', user_selector_nexts_path , class:"login-btn"%></li>
        <% end %>
      </ul>

        <%# 登録してあればユーザーの写真を挿入する %>
      <div class="user-icon-img">
        <%= link_to image_tag("noname-icon.png", class:"user-header-icon", id:"user-header-icon"), "#" %>
      </div>
      <% if user_signed_in? %>
        <div class="edit-user-lists hidden" id="pull-down-icon">
          <li> <%= link_to 'ユーザー情報を編集する', "#", class:"edit-list" %> </li>
          <li> <%= link_to 'Scaut- Chatを見る', "#", class:"edit-list" %> </li>
          <li> <%= link_to 'サインアウトする', destroy_user_session_path, method: :delete, class:"edit-list" %> </li>
        </div>
      <% elsif company_signed_in? %>
        <div class="edit-user-lists hidden" id="pull-down-icon">
          <li> <%= link_to 'Scaut- Chatを見る', "#", class:"edit-list" %> </li>
          <li> <%= link_to 'サインアウトする', destroy_company_session_path, class:"edit-list" %> </li>
        </div>
      <% end %>
    </div>
  </div>


</header>
