<div class="message">
  <% if user_signed_in? %>
    <% if message.is_user %>
      <div class="comment-list">
        <div class="google">
          <div class="comment-top">
            <div class="comment-user comment-right">
              <%= current_user.name %>
            </div>
            <div class="comment-time">
              <%= l message.created_at %>
            </div>
          </div>
          <div class="comment right-top">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="comment-list">
        <div class="comment-main">
          <div class="comment-top">
            <div class="comment-user">
              <%= message.room.company.name %>
            </div>
            <div class="comment-time">
              <%= l message.created_at %>
            </div>
          </div>
          <div class="comment">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% end %>
  <% elsif company_signed_in? %>
    <% if message.is_user %>
      <div class="comment-list">
        <div class="comment-main">
          <div class="comment-top">
            <div class="comment-user">
              <%= message.room.user.name %>
            </div>
            <div class="comment-time">
              <%= l message.created_at %>
            </div>
          </div>
          <div class="comment">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="comment-list">
        <div class="comment-main">
          <div class="comment-top">
            <div class="comment-user">
              <%= current_company.company_name %>
            </div>
            <div class="comment-time">
              <%= l message.created_at %>
            </div>
          </div>
          <div class="comment">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>